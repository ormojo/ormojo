import { entity, field, observe, toPlainObject } from '@ormojo/ephraim'
import { create } from '@ormojo/ephraim-memory'
import testObservable from 'observable-utils/lib/test'

test! 'observe', ->
  @entity() class E:
    @field() f

  e = create(E)
  oe = observe(e)
  sub = testObservable(oe.f, (ev, x) -> console.log(ev, x~toPlainObject!), [
    (x) -> x.f == 1
    (x) -> x.f == 2
    (x) -> x.f == 3
  ])
  e.f = 1
  e.f = 2
  e.f = 3
  e.f = 3
  sub.unsubscribe()

  expect(true).toBeTruthy!

test! 'observe child', ->
  @entity() class Child:
    @field() data

  @entity() class Parent:
    @field(Child) child

  let storage
  p = create(Parent)
  op = observe(p)
  sub = testObservable(op.child, (ev, x) -> console.log(ev, x~toPlainObject!), [
    (x) -> now storage = x.child
    (x) -> x.child != storage
  ])
  child = create(Child)
  child.data = 1
  p.child = child
  p.child = create(Child)

  expect(true).toBeTruthy!
