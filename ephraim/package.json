{
  "name": "@ormojo/ephraim",
  "version": "1.0.3",
  "license": "MIT",
  "description": "A JavaScript entity framework.",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "jsnext:main": "lib/index.es.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib coverage .nyc_output",
    "build": "rollup -c",
    "build:coverage": "cross-env COVERAGE=true rollup -c",
    "test": "npm run clean && npm run build && jest",
    "test:only": "jest",
    "test:debug": "node --inspect --debug-brk $(npm bin)/jest -i --env jest-environment-node-debug",
    "coverage": "npm run clean && npm run build:coverage && jest --coverage",
    "lint": "eslint --ext .js,.lsc src",
    "preversion": "npm run lint && npm run test"
  },
  "dependencies": {
    "@ormojo/fobs": "^1.0.9",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0"
  },
  "devDependencies": {
    "jest": "^27.0.4",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "lsc"
    ],
    "transform": {
      "\\.lsc$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    },
    "testRegex": "(\\.|/)test\\.lsc$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  }
}
