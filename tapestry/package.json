{
  "name": "@ormojo/tapestry",
  "version": "0.2.11",
  "license": "MIT",
  "description": "Tools for describing cross-backend relationships in ormojo.",
  "main": "lib/index.js",
  "module": "lib/index.es.js",
  "jsnext:main": "lib/index.es.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib coverage .nyc_output",
    "build": "rollup -c",
    "build:coverage": "cross-env COVERAGE=true rollup -c",
    "test": "npm run clean && npm run build && jest",
    "test:debug": "node --inspect --debug-brk $(npm bin)/jest -i --env jest-environment-node-debug",
    "coverage": "npm run clean && npm run build:coverage && jest --coverage",
    "lint": "eslint --ext .js,.lsc src",
    "preversion": "npm run lint && npm run build"
  },
  "devDependencies": {
    "@oigroup/babel-preset-lightscript": "^3.0.0",
    "@oigroup/lightscript-eslint": "^3.0.0",
    "@ormojo/elasticsearch": "^0.2.10",
    "@ormojo/mysql": "^0.2.9",
    "babel-cli": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-istanbul": "^4.1.5",
    "cross-env": "^5.0.5",
    "eslint": "~4.8.0",
    "jest": "^21.2.1",
    "jest-environment-node-debug": "^2.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.0",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-node-resolve": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "lsc"
    ],
    "transform": {
      "\\.lsc$": "<rootDir>/lightscript.jest.js"
    },
    "testRegex": "(\\.|/)test\\.lsc$"
  },
  "dependencies": {
    "@ormojo/ephraim": "^0.2.8",
    "@ormojo/ormojo": "^0.2.8"
  }
}
