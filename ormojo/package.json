{
  "name": "@ormojo/ormojo",
  "version": "1.1.0",
  "license": "MIT",
  "description": "A multi-backend, isomorphic ORM for JavaScript.",
  "type": "commonjs",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib coverage .nyc_output",
    "build": "rollup -c",
    "build:coverage": "cross-env COVERAGE=true rollup -c",
    "test": "npm run clean && npm run build && jest",
    "test:debug": "node --debug-brk --inspect $(npm bin)/jest -i --env jest-environment-node-debug",
    "coverage": "npm run clean && npm run build:coverage && jest --coverage",
    "lint": "eslint --ext .js,.lsc src",
    "preversion": "npm run lint && npm run build"
  },
  "dependencies": {
    "@ormojo/ephraim": "^1.0.1"
  },
  "devDependencies": {
    "jest": "^27.0.4",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "lsc"
    ],
    "transform": {
      "\\.lsc$": [
        "babel-jest",
        {
          "rootMode": "upward"
        }
      ]
    },
    "testRegex": "(\\.|/)test\\.lsc$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  }
}
