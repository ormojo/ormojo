{
  "name": "ormojo",
  "version": "0.0.4",
  "description": "A multi-backend SQL/NoSQL ORM for node.js and the browser.",
  "main": "./index.js",
  "scripts": {
    "clean": "rimraf lib build es coverage",
    "build": "mkdir -p lib && coffee -o lib src/*.coffee",
    "build_doc": "node_modules/.bin/codo src/",
    "prepublish": "npm run clean && npm run build",
    "test": "node_modules/.bin/mocha --recursive --compilers coffee:coffee-script/register",
    "coverage:build": "node_modules/.bin/mocha --recursive --compilers coffee:coffee-script/register --require coffee-coverage/register-istanbul",
    "coverage:report": "node_modules/.bin/istanbul report",
    "coverage": "npm run coverage:build && npm run coverage:report"
  },
  "pre-commit": [
    "prepublish",
		"test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ormojo/ormojo.git"
  },
  "keywords": [
    "orm",
    "sql",
    "nosql",
    "denormalize"
  ],
  "author": "William C. Johnson <wcjohnson@oigroup.net> (https://github.com/wcjohnson)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ormojo/ormojo/issues"
  },
  "homepage": "https://github.com/ormojo/ormojo",
  "devDependencies": {
    "chai": "^3.5.0",
    "codo": "^2.1.2",
    "coffee-coverage": "^1.0.1",
    "coffee-script": "^1.11.1",
    "cuid": "^1.3.8",
    "istanbul": "^0.4.5",
    "mocha": "^2.4.5",
    "pre-commit": "^1.1.3",
    "rimraf": "^2.5.4"
  },
  "dependencies": {
    "merge-options": "0.0.64"
  },
  "peerDependencies": {}
}
