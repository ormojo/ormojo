{
  "name": "@ormojo/fobs",
  "version": "1.0.7",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "description": "Fast, minimal, functional ES7 Observables.",
  "type": "commonjs",
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib coverage .nyc_output",
    "build": "npm run build:rollup",
    "build:rollup": "rollup -c",
    "build:plain": "babel -x \".js\",\".lsc\" src --out-dir lib",
    "build:rollup:coverage": "cross-env COVERAGE=true rollup -c",
    "test": "npm run lint && npm run clean && npm run build && jest",
    "test:only": "jest",
    "coverage": "npm run clean && npm run build:rollup:coverage && jest --coverage",
    "lint": "eslint --ext .js,.lsc src",
    "preversion": "npm run test"
  },
  "dependencies": {
    "symbol-observable": "^1.1.0"
  },
  "devDependencies": {
    "jest": "^26.1.0",
    "npm-run-all": "^4.1.5"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "lsc"
    ],
    "transform": {
      "\\.lsc$": ["babel-jest", { "rootMode": "upward" }]
    },
    "testRegex": "(\\.|/)test\\.lsc$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ]
  }
}
